<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdicionarPerguntaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtPergunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Pergunta"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtAltA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Opção A"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtAltB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Opção B"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtAltC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Opção C"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtAltD"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Opção D"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtAltOk"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Alternativa Correta"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/butSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incluir"
            android:text="Salvar" />
    </LinearLayout>

</LinearLayout>